<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@mipmap/background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_cicle"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/background_circle"
                android:textColor="@android:color/white"
                android:elevation="10dp"
                android:text="Inicia"
                android:onClick="btMap"/>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:text="Inicia vive la experiencia \ndel bordado"
                android:background="@drawable/background_line_botton"
                android:onClick="btMap"
                android:textColor="@android:color/black"
                android:gravity="center|left"
                android:paddingLeft="15dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:layout_height="70dp"
                android:layout_width="70dp"
                android:background="@drawable/background_circle"
                android:textColor="@android:color/white"
                android:onClick="btRanking"
                android:text="Ranking "
                android:elevation="10dp"
                />

            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/background_line_botton"
                android:onClick="btRanking"
                android:text="Ranking \nlos mas vicitados"
                android:textColor="@android:color/black"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:elevation="2dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button

            android:background="@drawable/background_circle"
            android:textColor="@android:color/white"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Compras"
            android:elevation="10dp"
            android:layout_gravity="right"
            android:onClick="btDiscount"/>

        <Button
            android:layout_margin="2dp"
            android:background="@drawable/background_line_botton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Compra los mejores productos"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:onClick="btDiscount"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="Directorio"
            android:onClick="btVideo"
            android:background="@drawable/background_circle"
            android:textColor="@android:color/white"
            android:elevation="10dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Conoce todos los bordados"
            android:onClick="btVideo"
            android:textColor="@android:color/black"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:background="@drawable/background_line_botton"
            android:elevation="2dp"/>
    </LinearLayout>


</LinearLayout>
